<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="phoenix_alarm_pool_backup_tree">
        <field name="name">phoenix.alarm.pool.backup.tree</field>
        <field name="model">phoenix.alarm.pool.backup</field>
        <field name="arch" type="xml">
            <list string="告警趋势分析" delete="0" create="0" edit="0" default_order="id desc">
                <field name="name" optional="show"/>
                <field name="monitor_time" string="监测时间" optional="show"/>
                <field name='monitor_value' optional="show"/>
                <field name='monitor_code' optional="show"/>
                <field name='async_state' optional="show"/>
                <field name='async_time' optional="show"/>
                <field name="company_id" optional="hide"/>
                <field name="id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="phoenix_alarm_pool_backup_kanban" model="ir.ui.view">
        <field name="name">phoenix.alarm.pool.backup.kanban</field>
        <field name="model">phoenix.alarm.pool.backup</field>
        <field name="arch" type="xml">
            <kanban sample="1" create="0" delete="0" string="告警趋势分析">
                <field name="name" />
                <field name='monitor_time'/>
                <field name='monitor_value'/>
                <field name='monitor_code'/>
                <field name='async_state'/>
                <field name='async_time'/>
                <field name='write_uid'/>
                <field name='write_date'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click oe_semantic_html_override">
                            <div class="oe_kanban_content" tooltip="kanban-tooltip">
                                <div class="o_kanban_record_body">
                                    <span class="o_kanban_record_title" t-if="record.name.raw_value">设备测点- <field name="name"/><br/></span>
<!--                                    <span class="oe_grey" t-if="record.alarm.raw_value">实时测值- <field name="alarm"/><br/></span>-->
<!--                                    <span class="oe_grey" t-if="record.default_code.raw_value">测点编码- <field name="default_code"/><br/></span>-->
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="phoenix_alarm_pool_backup_calendar">
        <field name="name">phoenix.alarm.pool.backup.calendar</field>
        <field name="model">phoenix.alarm.pool.backup</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="告警趋势分析" date_start="write_date" event_limit="5" mode="month" delete="false">
                <field name="name"/>
                <field name="write_date" string="处理日期"/>
                <field name="write_uid" string="处理人"/>
            </calendar>
        </field>
    </record>

    <record id="phoenix_alarm_pool_backup_search" model="ir.ui.view">
        <field name="name">phoenix.alarm.pool.backup.search</field>
        <field name="model">phoenix.alarm.pool.backup</field>
        <field name="arch" type="xml">
            <search string="告警趋势分析">
                 <filter string="今日数据" name="today" domain="[('monitor_time','=', current_date)]"/>
                <filter string="本月数据" name="month" domain="[('monitor_time','&gt;=', time.strftime('%Y-%m-01')),('monitor_time','&lt;',  (context_today() + relativedelta(months=1)).strftime('%Y-%m-01') ) ]"/>
                <filter string="上月数据" name="month2" domain="[('monitor_time','&lt;', time.strftime('%Y-%m-01')),('monitor_time','&gt;=',  (context_today() - relativedelta(months=1)).strftime('%Y-%m-01') ) ]"/>
                <filter string="本年数据" name="year" domain="[('monitor_time','&lt;=', time.strftime('%Y-12-31')),('monitor_time','&gt;=', time.strftime('%Y-01-01'))]"/>
                <field name="monitor_time" string="告警时间"/>
                <separator/>
                <field name="name"/>
                <separator/>
                <group expand="0" string="分组">
                    <filter string="测点" name="group_name" context="{'group_by':'name'}"/>
                    <filter string="监测时间" name="group_monitor_time" context="{'group_by':'monitor_time'}"/>
                    <filter string="告警时间" name="group_async_time" context="{'group_by':'async_time'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_phoenix_alarm_pool_backup" model="ir.actions.act_window">
        <field name="name">告警趋势分析</field>
        <field name="res_model">phoenix.alarm.pool.backup</field>
        <field name="view_mode">list,kanban,calendar</field>
        <field name="search_view_id" ref="phoenix_alarm_pool_backup_search"/>
        <field name="view_ids"
           eval="[(5, 0, 0),
                  (0, 0, {'view_mode': 'list', 'view_id': ref('phoenix_alarm_pool_backup_tree')}),
                  (0, 0, {'view_mode': 'kanban', 'view_id': ref('phoenix_alarm_pool_backup_kanban')}),
                  (0, 0, {'view_mode': 'calendar', 'view_id': ref('phoenix_alarm_pool_backup_calendar')}),
                  ]"/>
    </record>
</odoo>